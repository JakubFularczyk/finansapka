<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Przezroczyste tło -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
